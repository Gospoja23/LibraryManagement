@model LibraryManagement.ViewModels.Authors.GetAuthorsVM;

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<a href="@Url.Action("Create", "Authors")" class="btn btn-primary mb-3">Add New Author</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Items)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>
                    <a href="@Url.Action("Edit", "Authors", new { id = author.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Authors", new { id = author.Id })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
